<Window x:Class="Assignment2.Dialogs.WinnerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment2.Dialogs"
        mc:Ignorable="d"
        Title="WinnerDialog" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="WinnerTextBlock" FontSize="20" TextAlignment="Center" Margin="0,0,0,20"/>
            <Button Content="Close" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
